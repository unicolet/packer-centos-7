{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'service' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'service' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "http",
      "iso_urls": [
        "/opt/images/CentOS-7-x86_64-Minimal-1511.iso"
      ],
      "iso_checksum_type": "md5",
      "iso_checksum": "88c0437f0a14c6e2c94426df9d43cd67",
      "ssh_username": "service",
      "ssh_password": "s3rvice",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'service'|sudo -S /sbin/halt -h -p",
      "guest_additions_mode": "disable",
      "vm_name": "middlewareinsight-centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ]
      ]
    }
  ]
}
